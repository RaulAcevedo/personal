<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutThemeWhite"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@color/menugray" >

            <FrameLayout
                android:id="@+id/leftnav_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="65" >
        <FrameLayout
            android:id="@+id/offduty_fragment"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70" >

            <TableRow
                android:id="@+id/tableRowSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnPreviousDay"
                    android:text="@string/previousDay"
                    style="@style/KMBButton"
                    android:layout_marginLeft="2dip"
                    android:layout_width="0dip"
                    android:layout_weight="17"
                />

                <TextView
                    android:id="@+id/tvLogDate"
                    style="@style/KMBLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dip"
                    android:layout_marginLeft="0dip"
                    android:text="@string/lbllogdate"
                    android:layout_weight="26"
                />
                <TextView
                    android:id="@+id/txtLogDate"
                    style="@style/KMBLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvLogDate"
                    android:layout_alignBottom="@+id/tvLogDate"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/cboLogDate"
                    style="@style/Theme.SpinnerLight"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:layout_weight="40"/>

                <Button
                    android:id="@+id/btnNextDay"
                    android:text="@string/nextDay"
                    style="@style/KMBButton"
                    android:layout_width="0dip"
                    android:layout_weight="17"/>
            </TableRow>
            <TableRow>
				<TextView
			        android:id="@+id/txtExemptLog"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:visibility="gone"
			        android:layout_marginLeft="10dp"
			        style="@style/RptDailyHoursLabelRed"
			        android:text="@string/lblexempt_log" />                
            </TableRow> 
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <FrameLayout
                    android:id="@+id/content_fragment"
                    style="@style/ActivityLayoutStyle"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dip"
                    android:layout_weight="70" >
                </FrameLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    </LinearLayout>