<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        style="@style/LayoutTheme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

	   	<TextView
	   	        android:id="@+id/lblTeamDrivingDeviceTypeHeader"    
	   			style="@style/Theme.TextViewBlack"
				android:layout_width="fill_parent"
	   	        android:layout_height="wrap_content"
	   	        android:text="@string/lblteamdrivingdevicetype" 
	            android:gravity="center_horizontal"
	            android:textStyle="bold">
	   </TextView>
	
	   	<TextView
	   			style="@style/Theme.TextViewBlack"
	   	        android:id="@+id/lblTypeOfDeviceBeingUsed"        
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:text="@string/lblwhattypeofdeviceisbeingused"
	         	android:layout_below="@+id/lblTeamDrivingDeviceTypeHeader" 
	         	android:layout_alignLeft="@+id/lblTeamDrivingDeviceTypeHeader" 
	         	android:layout_marginTop="40dp"> 
	   	</TextView>   	
	   		
	    <Button android:id="@+id/btnSharedDevice"
	         android:text="@string/btnSharedDevice" 
	         style="@style/KMBButton" 
	         android:layout_below="@+id/lblTypeOfDeviceBeingUsed" 
	         android:layout_alignLeft="@+id/lblTypeOfDeviceBeingUsed" 
	         android:layout_marginTop="25dp" 
	         android:width="250dp" 
	         android:height="55dp">
	    </Button>
	    
	    <ImageView
	  		android:id="@+id/imgdevicetypeshareddevice"
	  		android:contentDescription="@string/app_name"
	  		android:layout_width="55dip"
	  		android:layout_height="42dip"
		    android:layout_below="@+id/btnSharedDevice" 
		    android:layout_alignLeft="@+id/btnSharedDevice" 
	  		android:layout_marginLeft="90dip"
	  		android:layout_marginTop="15dp"
	   		android:src="@drawable/shared_device"
	  	/>
	    
	    <Button android:id="@+id/btnSeparateDevice" 
	        android:text="@string/btnSeparateDevice" 
	        style="@style/KMBButton" 
	        android:layout_below="@+id/imgdevicetypeshareddevice" 
	        android:layout_alignLeft="@+id/btnSharedDevice" 
	        android:width="250dp" 
	        android:height="55dp"
	        android:layout_marginTop="35dp">   
	    </Button>

	  	<ImageView
	  		android:id="@+id/imgdevicetypeseparatedevice"
	  		android:contentDescription="@string/app_name"
	  		android:layout_width="93dip"
	  		android:layout_height="42dip"
		    android:layout_below="@+id/btnSeparateDevice" 
		    android:layout_alignLeft="@+id/btnSeparateDevice" 
	  		android:layout_marginLeft="75dip"
	  		android:layout_marginTop="15dp"
	   		android:src="@drawable/separate_device"
	  	/>
	  		  	
	</RelativeLayout>
</ScrollView>
