<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/eldEventEdit"
              style="@style/FragmentStyle"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    style="@style/FragmentStyle"
                    android:layout_width="fill_parent"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="-15dp">

                    <TextView
                        android:id="@+id/lblStatus"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/status" />
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_toRightOf="@+id/lblStatus"
                        style="@style/EditLogRequestDetailText" />
                    <View
                        android:id="@+id/hrStatus"
                        android:layout_below="@+id/tvStatus"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@id/lblStartTime"
                        android:layout_below="@+id/hrStatus"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/start_time"/>
                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_below="@+id/hrStatus"
                        android:layout_toRightOf="@+id/lblStartTime"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrStartTime"
                        android:layout_below="@+id/tvStartTime"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblEndTime"
                        android:layout_below="@+id/hrStartTime"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/end_time"/>
                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_below="@+id/hrStartTime"
                        android:layout_toRightOf="@+id/lblEndTime"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrEndTime"
                        android:layout_below="@+id/tvEndTime"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblLocation"
                        android:layout_below="@+id/hrEndTime"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/location"/>
                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_below="@+id/hrEndTime"
                        android:layout_toRightOf="@+id/lblLocation"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrLocation"
                        android:layout_below="@+id/tvLocation"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblLatitude"
                        android:layout_below="@+id/hrLocation"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/lbllatitude2"/>
                    <TextView
                        android:id="@+id/tvLatitude"
                        android:layout_below="@+id/hrLocation"
                        android:layout_toRightOf="@+id/lblLatitude"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrLatitude"
                        android:layout_below="@+id/tvLatitude"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblLongitude"
                        android:layout_below="@+id/hrLatitude"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/lbllongitude2"/>
                    <TextView
                        android:id="@+id/tvLongitude"
                        android:layout_below="@+id/hrLatitude"
                        android:layout_toRightOf="@+id/lblLongitude"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrLongitude"
                        android:layout_below="@+id/tvLongitude"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblDrivingDistance"
                        android:layout_below="@+id/hrLongitude"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/lbldistance"/>
                    <TextView
                        android:id="@+id/tvDrivingDistance"
                        android:layout_below="@+id/hrLongitude"
                        android:layout_toRightOf="@+id/lblDrivingDistance"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrDrivingDistance"
                        android:layout_below="@+id/tvDrivingDistance"
                        style="@style/EditLogRequestDetailLineView"/>
                </RelativeLayout>
                <RelativeLayout
                    style="@style/FragmentStyle"
                    android:layout_width="fill_parent"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="-15dp">

                    <TextView
                        android:id="@+id/lblUnitNumber"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/unit_number"/>
                    <TextView
                        android:id="@+id/tvUnitNumber"
                        android:layout_toRightOf="@+id/lblUnitNumber"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrUnitNumber"
                        android:layout_below="@+id/tvUnitNumber"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblTrailerNumber"
                        android:layout_below="@+id/hrUnitNumber"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/trailernumber"/>
                    <TextView
                        android:id="@+id/tvTrailerNumber"
                        android:layout_below="@+id/hrUnitNumber"
                        android:layout_toRightOf="@+id/lblTrailerNumber"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrTrailerNumber"
                        android:layout_below="@+id/tvTrailerNumber"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblShipmentInfo"
                        android:layout_below="@+id/hrTrailerNumber"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/shipment_info"/>
                    <TextView
                        android:id="@+id/tvShipmentInfo"
                        android:layout_below="@+id/hrTrailerNumber"
                        android:layout_toRightOf="@+id/lblShipmentInfo"
                        style="@style/EditLogRequestDetailText" />
                    <View
                        android:id="@+id/hrShipmentInfo"
                        android:layout_below="@+id/tvShipmentInfo"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblRuleset"
                        android:layout_below="@+id/hrShipmentInfo"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/ruleset"/>
                    <TextView
                        android:id="@+id/tvRuleset"
                        android:layout_below="@+id/hrShipmentInfo"
                        android:layout_toRightOf="@+id/lblRuleset"
                        style="@style/EditLogRequestDetailText"
                        android:singleLine="false"
                        android:inputType="text"/>
                    <View
                        android:id="@+id/hrRuleset"
                        android:layout_below="@+id/tvRuleset"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblMiles"
                        android:layout_below="@+id/hrRuleset"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/miles_label"/>
                    <TextView
                        android:id="@+id/tvMiles"
                        android:layout_below="@+id/hrRuleset"
                        android:layout_toRightOf="@+id/lblMiles"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrMiles"
                        android:layout_below="@+id/tvMiles"
                        style="@style/EditLogRequestDetailLineView"/>

                    <TextView
                        android:id="@+id/lblHours"
                        android:layout_below="@+id/hrMiles"
                        style="@style/EditLogRequestDetailLabel"
                        android:text="@string/hours"/>
                    <TextView
                        android:id="@+id/tvHours"
                        android:layout_below="@+id/hrMiles"
                        android:layout_toRightOf="@+id/lblHours"
                        style="@style/EditLogRequestDetailText"/>
                    <View
                        android:id="@+id/hrHours"
                        android:layout_below="@+id/tvHours"
                        style="@style/EditLogRequestDetailLineView"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/lblReasonForEdit"
                    style="@style/EditLogRequestDetailLabel"
                    android:text="@string/reason_for_edit"/>
                <TextView
                    android:id="@+id/tvReasonForEdit"
                    style="@style/EditLogRequestDetailText"/>
            </LinearLayout>
            <View
                android:id="@+id/hrReasonForEdit"
                style="@style/EditLogRequestDetailLineView"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
