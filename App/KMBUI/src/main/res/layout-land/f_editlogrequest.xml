<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FragmentStyle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editlogrequest">

    <TextView
        android:id="@+id/lblEditLogRequestTitle"
        style="@style/EditLogRequestTitle" />

    <TextView
        android:id="@+id/lblEditLogRequestSubtitle"
        style="@style/EditLogRequestSubtitle"
        android:text="@string/editlogrequestsubtitle" />

    <LinearLayout
        android:id="@+id/linearHUD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:animateLayoutChanges="true">

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"/>

        <TextView
            android:id="@+id/txtError"
            style="@style/Theme.TextViewBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#b94a48"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/hud_error"/>

        <TextView
            android:id="@+id/txtSuccess"
            style="@style/Theme.TextViewBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#468847"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/hud_success"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip">

        <TextView
            android:id="@+id/lblEventTime"
            style="@style/EditLogRequestText"
            android:layout_weight="0.9"
            android:text="@string/lbleventtime" />

        <TextView
            android:id="@+id/lblEvent"
            style="@style/EditLogRequestText"
            android:layout_weight="1"
            android:text="@string/lblevent" />

        <TextView
            android:id="@+id/lblTractorNumber"
            style="@style/EditLogRequestText"
            android:layout_weight="1"
            android:text="@string/lbltractornumber2" />

        <TextView
            android:id="@+id/lblLocation"
            style="@style/EditLogRequestText"
            android:layout_weight="1.5"
            android:text="@string/lbllocation2"/>

        <TextView
            android:id="@+id/lblButtonPlaceholder"
            style="@style/EditLogRequestText"
            android:layout_width="110dp"
            android:text="  "/>

    </LinearLayout>

    <GridView android:id="@+id/gridEditRequestLogEvents"
        android:numColumns="1"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:scrollbarStyle="outsideInset"/>

</LinearLayout>