<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/uee_cbo_claim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Theme.CheckBoxBlack"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/uee_item_datetime"
                    style="@style/Theme.TextViewBlack.Small"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/uee_item_eventtype"
                    style="@style/Theme.TextViewBlack.Small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/uee_item_unitnumber"
                    style="@style/Theme.TextViewBlack.Small"
                    android:gravity="right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/uee_item_distance"
                    style="@style/Theme.TextViewBlack.Small"
                    android:gravity="right" />

        </LinearLayout>

</LinearLayout>