<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/LayoutTheme"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:background="@android:color/white"
              tools:context="com.jjkeller.kmb.RoadsideInspectionDataTransfer">

    <TextView
        style="@style/Theme.TextViewBlack.Title"
        android:text="@string/roadside_inspection_data_transfer_title"/>

    <TextView
        style="@style/Theme.TextViewBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/roadside_inspection_data_transfer_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/data_transfer_button"
            style="@style/KMBButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_transfer"/>

        <Button
            android:id="@+id/roadside_inspection_button"
            style="@style/KMBButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roadside_inspection_mode"/>
    </LinearLayout>

</LinearLayout>
