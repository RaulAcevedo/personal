<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutThemeWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="20"
        android:background="@color/menugray">

        <FrameLayout
            android:id="@+id/leftnav_fragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="80"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtExemptLog"
            style="@style/Theme.TextViewRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:gravity="center_horizontal"
            android:text="@string/lblexempt_log"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/offduty_fragment"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <FrameLayout
            android:id="@+id/datenav_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@+id/content_fragment"
            style="@style/ActivityLayoutStyle"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginRight="15dip"
            android:layout_weight="7" />

        <FrameLayout
            android:id="@+id/recap_hours_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>