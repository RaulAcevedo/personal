<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eldEventEdit"
    style="@style/FragmentStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="3">

                <TableRow>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/lblStatus"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbldutystatus" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>

                    <Spinner
                        android:id="@+id/cboDutyStatus"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Theme.SpinnerLight"
                        android:prompt="@string/selectstatus_prompt" />

                    <TextView
                        android:id="@+id/reqDutyStatus"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red"/>
                </TableRow>

                <TableRow android:layout_marginTop="15px">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/lblStartTime"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblstarttime2" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>

                    <Button
                        android:id="@+id/btnStartTime"
                        style="@style/Theme.SpinnerLight"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"/>

                    <TextView
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red"/>
                </TableRow>

                <TableRow android:layout_marginTop="15px">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/lblEndTime"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblendtime" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <Button
                        android:id="@+id/btnEndTime"
                        style="@style/Theme.SpinnerLight"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"/>

                    <TextView
                        android:id="@+id/btnEndTimeAsterisk"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red"/>
                </TableRow>

                <TableRow android:layout_marginTop="15px">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/lblLocation"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lcrpt_lbllocation" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>

                    <EditText
                        android:id="@+id/editLocation"
                        android:hint="@string/msgactuallocationminimumlength"
                        style="@style/EditTextTheme"
                        android:background="@android:drawable/editbox_background"
                        android:textCursorDrawable="@null"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:inputType="text"
                        android:maxLength="100" />

                    <TextView
                        android:id="@+id/editLocationRequiredAsterisk"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red"/>
                </TableRow>

                <TableRow android:layout_marginTop="15px">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/lblUnitNumber"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbltractornumberview" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>

                    <EditText
                        android:id="@+id/editUnitNumber"
                        style="@style/EditTextTheme"
                        android:background="@android:drawable/editbox_background"
                        android:textCursorDrawable="@null"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:maxLength="50" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                </TableRow>

                <TableRow android:layout_marginTop="15px">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/lblTrailerNumber"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbltrailernumber2" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>

                    <EditText
                        android:id="@+id/editTrailerNumber"
                        style="@style/EditTextTheme"
                        android:background="@android:drawable/editbox_background"
                        android:textCursorDrawable="@null"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:maxLength="50" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                </TableRow>

                <TableRow android:layout_marginTop="15px">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/lblShipmentInfo"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblshipmentinfoview" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>

                    <EditText
                        android:id="@+id/editShipmentInfo"
                        style="@style/EditTextTheme"
                        android:background="@android:drawable/editbox_background"
                        android:textCursorDrawable="@null"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:maxLength="100" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>
                </TableRow>

                <TableRow android:layout_marginTop="15px">
                    <!-- control the height of the Ruleset spinner otherwise it 'jumps' as you navigate records -->
                    <Spinner
                        android:layout_width="10dip"
                        android:layout_height="wrap_content"
                        android:entries="@array/EldEventDutyStatus_array_edit"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/lblRuleset"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblruleset" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>

                    <Spinner
                        android:id="@+id/cboRuleset"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/Theme.SpinnerLight"
                        android:prompt="@string/selectruleset_prompt" />

                    <TextView
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red"/>
                </TableRow>

                <TableRow android:id="@+id/rowDrivingDistance" android:layout_marginTop="15px">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/lblDrivingDistance"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbldistance" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>

                    <EditText
                        android:id="@+id/editDrivingDistance"
                        style="@style/EditTextTheme"
                        android:background="@android:drawable/editbox_background"
                        android:textCursorDrawable="@null"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="100" />

                    <TextView
                        android:id="@+id/textDrivingDistanceRequiredAsterisk"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red"/>
                </TableRow>

                <TableRow android:layout_marginTop="15px">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/lblDriversAnnotation"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblannotation" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>

                    <EditText
                        android:id="@+id/editDriversAnnotation"
                        style="@style/EditTextTheme"
                        android:background="@android:drawable/editbox_background"
                        android:textCursorDrawable="@null"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:maxLength="60"
                        android:hint="@string/hintfourcharactersorlonger"/>

                    <TextView
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/lblEventOrigin"
        android:text="@string/lblEventOrigin"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtNoRecords"
        style="@style/Theme.TextViewBlack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:text="@string/noevents"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"/>

</LinearLayout>