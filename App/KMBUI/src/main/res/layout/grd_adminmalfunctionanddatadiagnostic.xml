<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@android:color/white"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

    <FrameLayout
        android:id="@+id/code_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        tools:background="@drawable/rounded_corner_red">

        <TextView
            android:id="@+id/code"
            style="@style/Theme.TextViewWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="A"/>
    </FrameLayout>

    <TextView
        android:id="@+id/description"
        style="@style/Theme.TextViewBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/remove"
        android:layout_toRightOf="@+id/code_wrapper"
        android:layout_toStartOf="@+id/remove"
        tools:text="Test malfunction text"/>

    <ImageButton
        android:id="@+id/remove"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/white"
        android:contentDescription="@string/remove"
        android:src="@drawable/close_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"/>

</RelativeLayout>
