<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/chkClaim"
                style="@style/Theme.CheckBoxBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="" >
            </CheckBox>

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lblStart"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/lblstart" >
                    </TextView>

                    <TextView
                        android:id="@+id/tvStart"
                        style="@style/Theme.TextViewBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lblEnd"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/lblend" />

                    <TextView
                        android:id="@+id/tvEnd"
                        style="@style/Theme.TextViewBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lblDistance"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/lbldistance" />

                    <TextView
                        android:id="@+id/tvDistance"
                        style="@style/Theme.TextViewBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lblUnit"
                        style="@style/Theme.TextViewBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/lblunit" />

                    <TextView
                        android:id="@+id/tvUnit"
                        style="@style/Theme.TextViewBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lblProduction"
                        style="@style/Theme.TextViewBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/lblProduction"
                        android:layout_span="2"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_height="wrap_content" >

                    <Spinner
                        android:id="@+id/cboProduction"
                        style="@style/Theme.SpinnerLight"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:prompt="@string/cdmotionpicture_prompt"
                        android:layout_span="2"
                        android:visibility="gone" >
                    </Spinner>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lblAuthority"
                        style="@style/Theme.TextViewBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/lblmotionpictureauthority"
                        android:layout_span="2"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtAuthority"
                        style="@style/Theme.TextViewBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:maxLength="100"
                        android:text="@string/notspecifiedprompt"
                        android:layout_span="2"
                        android:visibility="gone" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/gdh_divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tableLayout1"
        android:background="@drawable/white_black_gradient"
        android:paddingTop="2dp" >
    </View>

</RelativeLayout>