<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutTheme"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Theme.TextViewBlack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/lblcertifytitle"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/tvMessage"
        style="@style/Theme.TextViewBlack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/lblcertifydescription" >
    </TextView>

    <GridView
        android:id="@+id/grdCertifyLogs"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1.0" >
    </GridView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCLCertify"
            style="@style/KMBButton"
            android:layout_height="wrap_content"
            android:text="@string/btnsubmit" />
    </LinearLayout>

</LinearLayout>