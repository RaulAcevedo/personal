<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menu_bg_selector" >

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:background="@drawable/white_black_gradient"
        android:paddingTop="2dp" >
    </View>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblReportName"
        android:layout_below="@+id/lblReportName"
        android:text="@string/space"
        android:textSize="10sp" >
    </TextView>

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView03"
        android:paddingTop="10dp"
        android:text="@string/space" >
    </TextView>

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TextView04"
        android:layout_toLeftOf="@+id/TextView04"
        android:layout_alignParentRight="true"
        android:background="@drawable/select"
        android:contentDescription="@string/oklabel"
        android:maxHeight="10dp"
        android:layout_marginRight="15dp" >
    </ImageButton>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxHeight="8dp"
        android:text="@string/space" >
    </TextView>

    <TextView
        android:id="@+id/lblReportName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView03"
        android:text="@string/title"
        android:paddingRight="20dp"
        android:textColor="@color/black" >
    </TextView>

</RelativeLayout>