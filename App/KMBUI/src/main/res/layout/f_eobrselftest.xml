<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        style="@style/Theme.TextViewBlack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:text="@string/lbl_eld_self_test_title"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSetSelfTest"
        style="@style/KMBButton"
        android:layout_width="fill_parent"
        android:layout_margin="5dp"
        android:text="@string/btn_start_self_test" />

    <Button
        android:id="@+id/btnGetSelfTest"
        style="@style/KMBButton"
        android:layout_width="fill_parent"
        android:layout_margin="5dp"
        android:text="@string/btn_get_self_test_result" />
    
    <TextView
        android:id="@+id/tvSelfTestResult"
        style="@style/KMBLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

</LinearLayout>