<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblTitle"
        style="@style/Theme.TextViewBlack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/lblfuelpurchasereceipttitle"
        android:textStyle="bold" >
    </TextView>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblPurchasePrice"
                style="@style/Theme.TextViewBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblpurchaseprice" >
            </TextView>

            <EditText
                android:id="@+id/txtPurchasePrice"
                style="@style/EditTextTheme"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@null"
                android:maxLength="7" >
            </EditText>

            <TextView
                android:id="@+id/lblFuelVendor"
                style="@style/Theme.TextViewBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblfuelvendor" >
            </TextView>

            <EditText
                android:id="@+id/txtFuelVendor"
                style="@style/EditTextTheme"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:textCursorDrawable="@null"
                android:inputType="text" >
            </EditText>

            <TextView
                android:id="@+id/lblInvoiceNumber"
                style="@style/Theme.TextViewBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblinvoicenumber" >
            </TextView>

            <EditText
                android:id="@+id/txtInvoiceNumber"
                style="@style/EditTextTheme"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:textCursorDrawable="@null"
                android:inputType="text" >
            </EditText>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <Button
                    android:id="@+id/btnOK"
                    style="@style/KMBButton"
                    android:layout_height="wrap_content"
                    android:text="@string/oklabel" >
                </Button>

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/KMBButton"
                    android:layout_height="wrap_content"
                    android:text="@string/cancellabel" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>