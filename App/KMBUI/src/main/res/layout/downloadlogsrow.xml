<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/chkLogDate"
        android:layout_below="@+id/chkLogDate"
        android:background="@drawable/white_black_gradient"
        android:paddingTop="2dp" >
    </View>

    <CheckBox
        android:id="@+id/chkLogDate"
        style="@style/Theme.CheckBoxBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:text="@string/eventvalues_logdate" >
    </CheckBox>

</RelativeLayout>