<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp">

        <CheckBox
            android:id="@+id/uee_cbo_claim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Theme.CheckBoxBlack"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uee_item_datetime"
            style="@style/Theme.TextViewBlack.Medium"
            android:layout_weight="3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uee_item_eventtype"
            style="@style/Theme.TextViewBlack.Medium"
            android:layout_marginBottom="40dp"
            android:layout_weight="4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uee_item_unitnumber"
            style="@style/Theme.TextViewBlack.Medium"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uee_item_distance"
            style="@style/Theme.TextViewBlack.Medium"
            android:layout_weight="2" />

</LinearLayout>