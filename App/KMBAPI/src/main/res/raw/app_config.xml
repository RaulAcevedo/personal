<?xml version="1.0" encoding="utf-8"?>
<!-- The localSettings section is duplicated in the appropriate app_config.xml -->
<!-- Settings file in the sub-folders: Debug, DEV, Pilot, Release -->
<!-- The systemSettings section is only included in this file.  -->
<!-- Any item that should be different in the different configuration should be moved -->
<!-- to the localSettings section so that the continuous integration utilizes the  -->
<!-- correct setting -->
<appSettings>
    <localSettings>
        <ShowDebugFunctions>true</ShowDebugFunctions>
        <KmbActivationUrl_REST>http://dev.drivermanagement.corpr.jjkeller.local/KMRESTServices/ActivationService.svc</KmbActivationUrl_REST>
        <KmbWebServiceUrl_REST>http://dev.drivermanagement.corpr.jjkeller.local/KMRESTServices/LogCheckerService.svc</KmbWebServiceUrl_REST>
    </localSettings>
    <featureToggles>
        <SelectiveFeatureTogglesEnabled>true</SelectiveFeatureTogglesEnabled>
        <EldMandate>true</EldMandate>
        <IgnoreServerTime>false</IgnoreServerTime>
        <UseCloudServices>true</UseCloudServices>
        <DefaultTripInformation>true</DefaultTripInformation>
        <AlkCopilotEnabled>true</AlkCopilotEnabled>
        <PersonalConveyanceEnabled>true</PersonalConveyanceEnabled>
        <NewTeamDriverWorkflowEnabled>true</NewTeamDriverWorkflowEnabled>
        <IgnoreFirmwareUpdate>true</IgnoreFirmwareUpdate>
        <ForceComplianceTabletMode>false</ForceComplianceTabletMode>
        <HyrailEnabled>true</HyrailEnabled>
        <NonRegDrivingEnabled>true</NonRegDrivingEnabled>
        <GeotabInjectDataStallsEnabled>false</GeotabInjectDataStallsEnabled>
    </featureToggles>
    <malfunctionTime>
        <PositionMalfunctionMinutes>60</PositionMalfunctionMinutes>
        <EngineSyncMalfunctionMinutes>30</EngineSyncMalfunctionMinutes>
        <TimingMalfunctionClearMinutes>2</TimingMalfunctionClearMinutes>
    </malfunctionTime>
    <systemSettings>
        <EobrDeviceTypeName>PLXS.EOBR.EobrDevice</EobrDeviceTypeName>
        <EobrDeviceAssemblyName>PLXS.EOBR</EobrDeviceAssemblyName>
        <EobrIntervalMilliseconds>15000</EobrIntervalMilliseconds>
        <EobrHibernateIntervalMilliseconds>30000</EobrHibernateIntervalMilliseconds>
        <StatusRecordLogIntervalMilliseconds>60000</StatusRecordLogIntervalMilliseconds>
        <RoutePositionIntervalMinutes>15</RoutePositionIntervalMinutes>
        <HoursAvailableUpdateMinutes>60</HoursAvailableUpdateMinutes>
        <OverrideReferenceTimestamp>false</OverrideReferenceTimestamp>
        <ReferenceTimestampXS>01/08/09 12:00:00 AM</ReferenceTimestampXS>
        <KeepScreenOn>true</KeepScreenOn>
        <ReverseGeocodeFromLocalDB>false</ReverseGeocodeFromLocalDB>
        <UseBTEFirmwareDownload>true</UseBTEFirmwareDownload>
        <DownloadHistoryGeoTabTimeIntervalMilliseconds>600000</DownloadHistoryGeoTabTimeIntervalMilliseconds>
        <GeotabHistoryRepeatDownload>false</GeotabHistoryRepeatDownload>
    </systemSettings>
    <DataTransferMechanismSettings>
        <DataTransferMechanismTimerValue>120000</DataTransferMechanismTimerValue>  <!--milliseconds 1000 = 1 second -->
        <DataTransferMechanismSuccessDaysToNextTransfer>7</DataTransferMechanismSuccessDaysToNextTransfer>
        <DataTransferMechanismFailedDaysToNextTransfer>1</DataTransferMechanismFailedDaysToNextTransfer>
    </DataTransferMechanismSettings>
</appSettings>
