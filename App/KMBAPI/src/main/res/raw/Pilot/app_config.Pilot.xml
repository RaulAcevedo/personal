      <PersonalConveyanceEnabled>true</PersonalConveyanceEnabled>
      <NewTeamDriverWorkflowEnabled>true</NewTeamDriverWorkflowEnabled>
      <IgnoreFirmwareUpdate>false</IgnoreFirmwareUpdate>
      <HyrailEnabled>true</HyrailEnabled>
      <NonRegDrivingEnabled>true</NonRegDrivingEnabled>
      <GeotabInjectDataStallsEnabled>false</GeotabInjectDataStallsEnabled>
    </featureToggles>
    <DataTransferMechanismSettings>
        <DataTransferMechanismTimerValue>900000</DataTransferMechanismTimerValue>  <!--milliseconds 1000 = 1 second -->
    </DataTransferMechanismSettings>
</appSettings>
