<?xml version="1.0" encoding="utf-8"?>
<appSettings>
	<localSettings>
		<ShowDebugFunctions>false</ShowDebugFunctions>
		<KmbActivationUrl_REST>https://www.drivermanagement.com/PilotKMBRESTServices/ActivationService.svc</KmbActivationUrl_REST>
        <KmbWebServiceUrl_REST>https://www.drivermanagement.com/PilotKMBRESTServices/LogCheckerService.svc</KmbWebServiceUrl_REST>
	</localSettings>
    <malfunctionTime>
        <PositionMalfunctionMinutes>60</PositionMalfunctionMinutes>
        <EngineSyncMalfunctionMinutes>30</EngineSyncMalfunctionMinutes>
        <TimingMalfunctionClearMinutes>30</TimingMalfunctionClearMinutes>
